<% if notice %>
    <aside id="notice"><%= notice %></aside>  
<% end %>

<h1>Your catalog</h1>
<ul class="ctalog">
    <% cache @products do %>
        <% @products.each do |product| %>
            <% cache product do %>
                <li>
                    <%= image_tag(product.image_url, height: "200", width: "250") %>
                    <h2><%= product.title %></h2>
                    <p><%= sanitize(product.description)%></p>
                    <div class="price">
                        <%= product.price%>
                    </div> 
                </li>
            <% end %>
        <% end %>
    <% end %>
</ul>
